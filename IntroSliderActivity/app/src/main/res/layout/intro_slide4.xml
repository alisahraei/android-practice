<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E411C0">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/slide_icon_wh"
            android:layout_height="@dimen/slide_icon_wh"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/ic_travel" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slide_4_title"
            android:textStyle="bold"
            android:textSize="@dimen/slide_title_text_size"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/slide_4_desc"
            android:textSize="@dimen/slide_desc_text_size"
            android:gravity="center"
            android:textColor="@android:color/white"
            />


    </LinearLayout>
</RelativeLayout>